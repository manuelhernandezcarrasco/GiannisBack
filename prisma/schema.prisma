generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  phone     Int
  isAdmin   Boolean? @default(false)
  validated Boolean? @default(false)
}

model Validated {
  id      String @id() @default(uuid())
  code    String @unique @default(uuid())
  userId  String
}

model Burger {
  id           String @id() @default(uuid())
  name         String   @unique
  description  String?
  price_simple Decimal? @default(-1) @db.Money
  price_double Decimal? @default(-1) @db.Money
  price_veggie Decimal? @default(-1) @db.Money
}

model Topping {
  id    String @id() @default(uuid())
  name  String  @unique
  price Decimal @default(0.0) @db.Money
}

model Sale {
  id       String @id() @default(uuid())
  userId   String
  total    Decimal  @default(0.0) @db.Money
  accepted Boolean? @default(false)
  sent     Boolean? @default(false)
  received Boolean? @default(false)
  orders   Order[]
}

model Order {
  id         String @id() @default(uuid())
  burgerId   String
  userId     String
  saleId     String?
  orderPrice Decimal        @default(0.0) @db.Money
  active     Boolean        @default(true)
  sale       Sale?          @relation(fields: [saleId], references: [id])
  toppings   ToppingOrder[]
}

model ToppingOrder {
  id                String @id() @default(uuid())
  toppingId         String
  quantity          Int
  orderId           String
  toppingOrderPrice Decimal @db.Money
  order             Order   @relation(fields: [orderId], references: [id])
}
